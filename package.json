{
  "name": "flowline",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wrangler pages dev dist --port 8788\" --names frontend,api --prefix-colors blue,green",
    "dev:frontend": "vite",
    "dev:api": "wrangler pages dev dist --port 8788",
    "build": "tsc -b && vite build",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "wrangler pages dev dist",
    "db:migrate": "wrangler d1 migrations apply FLOWLINE_DB --local",
    "db:migrate:remote": "wrangler d1 migrations apply FLOWLINE_DB --remote",
    "deploy": "npm run build && wrangler pages deploy dist"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "hono": "^4.11.9",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260214.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "better-sqlite3": "^12.6.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.65.0"
  }
}
